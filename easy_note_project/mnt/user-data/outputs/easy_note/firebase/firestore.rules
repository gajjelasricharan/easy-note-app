// firestore.rules
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(resource) {
      return resource.data.ownerId == request.auth.uid;
    }

    function isSharedWith(resource) {
      return request.auth.uid in resource.data.sharedWithUids;
    }

    function hasEditorPermission(resource) {
      // Check if user has editor or owner permission in sharedWith array
      return isOwner(resource) || (
        isSharedWith(resource) &&
        resource.data.sharedWith.hasAny([
          { 'uid': request.auth.uid, 'permission': 'editor' }
        ])
      );
    }

    function hasViewPermission(resource) {
      return isOwner(resource) || isSharedWith(resource);
    }

    function isValidNote(data) {
      return data.keys().hasAll(['ownerId', 'title', 'createdAt', 'updatedAt'])
        && data.ownerId is string
        && data.title is string
        && data.title.size() <= 200;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if false; // Soft delete only
    }

    // Notes collection
    match /notes/{noteId} {
      // Read: owner or shared users
      allow read: if isAuthenticated() && hasViewPermission(resource);

      // Create: authenticated, must set themselves as owner
      allow create: if isAuthenticated()
        && request.resource.data.ownerId == request.auth.uid
        && isValidNote(request.resource.data);

      // Update: owner can update anything, editors can update content but not ownership/sharing
      allow update: if isAuthenticated() && (
        isOwner(resource) ||
        (hasEditorPermission(resource) &&
          // Editors can't change owner or sharing permissions
          !request.resource.data.diff(resource.data).affectedKeys().hasAny([
            'ownerId', 'sharedWith', 'sharedWithUids', 'inviteToken'
          ])
        )
      );

      // Delete: owner only
      allow delete: if isAuthenticated() && isOwner(resource);
    }
  }
}
